  <script>
    (function () {
      const form = document.getElementById("openHouseForm");
      const emailOutputContainer = document.getElementById("emailOutputContainer");
      const emailOutput = document.getElementById("emailOutput");
      const copyButton = document.getElementById("copyEmailBtn");
      const openEmailButton = document.getElementById("openEmailBtn");
      const copyStatus = document.getElementById("copyStatus");

      let currentEmailData = null;

      function formatDate(dateString) {
        if (!dateString) return "N/A";
        const date = new Date(dateString + "T00:00:00");
        if (isNaN(date.getTime())) return dateString;
        return date.toLocaleDateString("en-US", {
          weekday: "long",
          year: "numeric",
          month: "long",
          day: "numeric"
        });
      }

      form.addEventListener("submit", function (event) {
        event.preventDefault();

        const policyConfirm = document.getElementById("policyConfirm");
        if (!policyConfirm.checked) {
          alert("Please confirm that you have read and agree to the Open House Policy.");
          return;
        }

        if (!form.checkValidity()) {
          form.reportValidity();
          return;
        }

        const name = document.getElementById("realtorName").value.trim();
        const phone = document.getElementById("realtorPhone").value.trim();
        const address = document.getElementById("propertyAddress").value.trim();
        const dateValue = document.getElementById("openHouseDate").value;
        const time = document.getElementById("openHouseTime").value.trim();
        const map = document.getElementById("mapLink").value.trim();
        const directions = document
          .getElementById("directions")
          .value.trim();

        const formattedDate = formatDate(dateValue);
        const mapText = map || "No map link provided. Please advise if one is required.";
        const directionsText = directions || "Directions not provided.";

        let body = "Dear Yolanda Quiroz,\n\n";
        body += "I am requesting approval for an open house within Canyon Pass.\n\n";
        body += "Property address: " + address + "\n";
        body += "Open house date: " + formattedDate + "\n";
        body += "Open house time: " + time + "\n";
        body += "Realtor name: " + name + "\n";
        body += "Realtor phone: " + phone + "\n";
        body += "Map link: " + mapText + "\n";
        body += "Directions from gatehouse: " + directionsText + "\n\n";
        body += "I confirm that I have read and agree to comply with the Canyon Pass Open House Policy.\n\n";
        body += "Please let me know if any additional information is needed or if this request is approved.\n\n";
        body += "Thank you,\n";
        body += name;

        const subject =
          "Canyon Pass open house request | " + address + " | " + formattedDate;

        currentEmailData = { subject, body };

        emailOutput.value = body;
        emailOutputContainer.style.display = "block";
        copyStatus.textContent = "";
      });

      copyButton.addEventListener("click", function () {
        if (!emailOutput.value) return;

        emailOutput.select();
        emailOutput.setSelectionRange(0, emailOutput.value.length);

        if (navigator.clipboard && navigator.clipboard.writeText) {
          navigator.clipboard
            .writeText(emailOutput.value)
            .then(function () {
              copyStatus.textContent = "Copied to clipboard.";
            })
            .catch(function () {
              document.execCommand("copy");
              copyStatus.textContent = "Copied to clipboard.";
            });
        } else {
          document.execCommand("copy");
          copyStatus.textContent = "Copied to clipboard.";
        }
      });

      openEmailButton.addEventListener("click", function () {
        if (!currentEmailData) return;

        const recipient = "Yolanda.quiroz@associaarizona.com";
        const subject = encodeURIComponent(currentEmailData.subject);
        const body = encodeURIComponent(currentEmailData.body);

        const mailtoLink = "mailto:" + recipient + "?subject=" + subject + "&body=" + body;
        window.location.href = mailtoLink;

        copyStatus.textContent = "Opening your email client.";
      });
    })();
  </script>
</body>
